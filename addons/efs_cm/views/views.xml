<odoo>
  <data>
    <!-- Module configuration -->
    <record model="ir.ui.view" id="efs_cm.view_form_config">
      <field name="name">Cursos Config</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page name="credentials" string="Cursos Config">
            <separator string="Credenciales AWS" />
            <group>
              <field name="aws_access_key" required="1"/>
              <field name="aws_secret_key" required="1"/>
              <field name="aws_region" />
            </group>
            <separator string="AWS Transcoder" />
            <group>
              <field name="transcoder_pipeline_id"/>
              <button string="Complete Buckets" type="object" name="action_complete_buckets"/>
            </group>
            <separator string="S3 Bbuckets" />
            <group>
              <field name="s3_bucket_input" readonly="1"/>
              <field name="s3_bucket_output" readonly="1"/>
            </group>
            <separator string="Cloud Front" />
            <group>
              <field name="cloudfront_url" required="1"/>
            </group>
            <group>
              <field name="aws_signer_key_id" />
              <field name="aws_signer_private_key" />
            </group>
            <group>
              <button string="Test Config" type="object" name="action_test_config"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <!-- context="{'default_picking_id': id} -->
    <!-- Video View -->
    <record model="ir.ui.view" id="efs_cm.video_view">
      <field name="name">Video View</field>
      <field name="model">efs_cm.video</field>
      <field name="view_mode">tree,form</field>
      <field name="arch" type="xml">
        <form string="Video Form">
          <group>
            <field name="name"/>
            <field name="description"/>
          </group>
          <group>
            <field name="s3_bucket_path"/>
            <field name="autogenerated_code" readonly="1" />
            <button string="Check File" type="object" name="action_check_video_existence" />
          </group>
          <group>
            <field name="section_id" />
          </group>
          <group>
            <button string="Generate Formats" type="object" name="action_generate_formats" />
            <button string="Remove Formats" type="object" name="action_remove_formats" />
          </group>
          <group>
            <field name="formats" readonly="1"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Video Format -->
    <record model="ir.ui.view" id="efs_cm.video_format_view">
      <field name="name">Video Format View</field>
      <field name="model">efs_cm.video_format</field>
      <field name="view_mode">tree,form</field>
      <field name="arch" type="xml">
        <form string="Video Format Form">
          <group>
            <field name="s3_file" readonly="1"/>
            <field name="size" readonly="1"/>
            <!-- <field name="video_id" readonly="1" /> -->
          </group>
          <group>
            <button string="Test Url Signed" type="object" name="action_test_singed_url" />
          </group>
        </form>
      </field>
    </record>
  </data>
</odoo>